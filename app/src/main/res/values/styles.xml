<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NormalText" parent="Widget.MaterialComponents.TextView">
        <!--        <item name="android:layout_width">wrap_content</item>-->
        <!--        <item name="android:layout_height">wrap_content</item>-->
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:titleMarginTop">6dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:titleMarginBottom">6dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <!--        <item name="fontFamily">sans-serif-light</item>-->
    </style>

    <style name="NormalTextWithMargins" parent="NormalText">
        <!--        <item name="android:layout_width">wrap_content</item>-->
        <!--        <item name="android:layout_height">wrap_content</item>-->
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:titleMarginTop">6dp</item>
        <item name="android:titleMarginBottom">6dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <!--        <item name="fontFamily">sans-serif-light</item>-->
    </style>

    <style name="PrimaryText" parent="NormalText">
        <!--        <item name="android:textColor">@color/gray90</item>-->
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="PrimaryTextWithMargins" parent="NormalTextWithMargins">
        <!--        <item name="android:textColor">@color/gray90</item>-->
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="SecondaryTextView" parent="NormalText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ProfileCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/padding_and_margin_standard</item>
        <item name="cardCornerRadius">@dimen/card_rounded_corners</item>
        <item name="cardElevation">@dimen/elevation_30</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_margin">@dimen/padding_and_margin_standard</item>
<!--        <item name="cardCornerRadius">@dimen/card_rounded_corners</item>-->
<!--        <item name="cardElevation">@dimen/elevation_30</item>-->
        <item name="errorEnabled">true</item>
        <item name="errorIconTintMode">screen</item>
        <item name="hintTextColor">@color/text_color_accent</item>
        <item name="boxStrokeColor">@color/text_color_accent</item>
        <item name="placeholderTextColor">@color/text_color_accent</item>

        <item name="boxStrokeErrorColor">@color/text_color_error</item>
        <item name="errorIconTint">@color/text_color_error</item>
        <item name="errorTextColor">@color/text_color_error</item>
        <!--        <item name="android:textAppearance">@style/AccentTextAppearance</item>-->

    </style>

    <style name="EditTextStyle.Dense" parent="EditTextStyle">
        <item name="textInputFilledDenseStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense</item>
    </style>

    <style name="AccentTextAppearance" parent="TextAppearance.AppCompat">

    </style>
</resources>